{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form class="form-login" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    
    <img src="{{ asset('assets/img/logo-not-alone-noir.png') }}" />

    <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
    <input type="text" value="{{ last_username }}" placeholder="Nom d'utilisateur" name="username" id="inputUsername" class="form-control" required autofocus>
    <input type="password" placeholder="Mot de passe" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="cta-button login" type="submit">
        Se connecter
    </button>

    <h2>Nouveau ?</h2>
    <a class="cta-button" href="{{ path('user_registration') }}">
        Cr√©er un compte
    </a>
</form>
{% endblock %}
